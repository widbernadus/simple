@{
    ViewData["Title"] = "Library";
}

<div class="row">
    <div class="col-md-12">
        @if (TempData["success_message"] != null)
        {
            <div class="alert alert-success">
                @TempData["success_message"]
            </div>
        }

        @if (TempData["error_message"] != null)
        {
            <div class="alert alert-danger">
                @TempData["error_message"]
            </div>
        }
        <table class="table table-sm table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>Year</th>
                    <th>Genre</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.List)
                {
                    <tr>
                        <td>@item.title</td>
                        <td>@item.author</td>
                        <td>@item.publisher</td>
                        <td>@item.year</td>
                        <td>@item.genre</td>
                        <td>
                            <a href="/Home/Edit/@item.id" class="btn btn-sm btn-warning">Edit</a>
                            <button class="btn btn-sm btn-danger" onclick="delete_book('@item.id')">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-primary" href="/Home/AddForm">Add New Book</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    
    <script>
        function delete_book(id){
            var conf = confirm("Are you sure to delete the data?");
            if (conf) {
                $.post("/Home/Delete", { id: id })
                    .done(function (data) {
                        console.log(data);
                        location.reload();
                    });
            }
        }
    </script>
}